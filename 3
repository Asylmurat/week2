fun main() {
    val sergazy = Worker("Сергазы")
    val elaman = Worker("Еламан")
    sergazy.age = 25
    elaman.age = 26
    var sumAge = sergazy.age + elaman.age
    sergazy.salary = 1000
    elaman.salary = 2000
    var sumSalary = sergazy.salary + elaman.salary
    println("Сумма возрастов: $sumAge")
    println("Cумма зарплат: $sumSalary")
}
class Worker(val name: String){
    var age: Int = 0
        set(value) {
            if((value>0) and (value <110))
                field = value
        }
    var salary: Int = 0
        set(value) {
            if((value>0))
                field = value
        }
}
